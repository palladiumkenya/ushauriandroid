<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="56dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/nascoplogonew" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">


            <EditText
                android:id="@+id/usr_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter phone number*"
                android:maxLength="10"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- remove -->
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Select affiliation"
            />


        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:visibility="gone"
            android:focusable="false"
            android:id="@+id/affiliationnewspinner"
            android:hint="Select Affiliation*"
            app:drawableRightCompat="@drawable/down_arrow"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ucsfoptions"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">


                <EditText
                    android:id="@+id/trc_idno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Specify ID number"
                    android:maxLength="10"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <CheckBox
                android:id="@+id/chktracer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IS TRACER" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/terms"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_weight="0.5"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Privacy Terms and Condition"
                android:layout_weight="2.5"
                android:clickable="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorPrimary"

                android:background="?attr/selectableItemBackground"
                />
        </LinearLayout>
        <!-- remove -->

        <!-- get OTP -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/otpphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"

            android:text=""

            android:textColor="@color/black_darker"
            android:textStyle="bold" />

        <!-- get OTP -->

        <Button
            android:id="@+id/validate_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="@drawable/background_round_corner_button"
            android:text="Request OTP"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"/>


        <!-- Display Counter -->
        <TextView
            android:id="@+id/countdownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Time left: 60s"

            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/linearOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/otp_edit_text1"
                android:layout_width="@dimen/et_otp_width"
                android:layout_height="@dimen/et_otp_height"
                android:layout_marginEnd="@dimen/margin_right_otp"
                android:background="@drawable/otp_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text2"
                android:layout_width="@dimen/et_otp_width"
                android:layout_height="@dimen/et_otp_height"
                android:layout_marginEnd="@dimen/margin_right_otp"
                android:background="@drawable/otp_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text3"
                android:layout_width="@dimen/et_otp_width"
                android:layout_height="@dimen/et_otp_height"
                android:layout_marginEnd="@dimen/margin_right_otp"
                android:background="@drawable/otp_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />

            <EditText
                android:id="@+id/otp_edit_text4"
                android:layout_width="@dimen/et_otp_width"
                android:layout_height="@dimen/et_otp_height"
                android:layout_marginEnd="@dimen/margin_right_otp"
                android:background="@drawable/otp_edittext"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />
            <EditText
                android:id="@+id/otp_edit_text5"
                android:layout_width="@dimen/et_otp_width"
                android:layout_height="@dimen/et_otp_height"
                android:layout_marginEnd="@dimen/margin_right_otp"
                android:background="@drawable/otp_edittext"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/trueBlack" />



        </LinearLayout>


        <!-- submit otp -->
        <Button
            android:visibility="gone"
            android:id="@+id/submit_otp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="@drawable/background_round_corner_button"
            android:text="Submit OTP"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"/>


        <!-- submit otp -->


        <!-- end OTP -->



        <!-- Name Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:layout_marginTop="8dp">


            <EditText
                android:id="@+id/username_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username*"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/password_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password*"
                android:inputType="textWebPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--  Email Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/repassword_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password*"
                android:inputType="textWebPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:text="Show password"
            android:visibility="gone"
            android:textColor="#1C1C1C" />

        <!-- mobile number -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/securityhint_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="Security hint*"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Select security question" />

        <Spinner
            android:id="@+id/spinnerreg"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <!-- Password Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/securityanswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter security answer*"
                android:visibility="gone"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Re-enter Label -->

        <Button
            android:id="@+id/register_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="@drawable/background_round_corner_button"
            android:text="Create account"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="@drawable/background_round_corner_button"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:text="Cancel" />


    </LinearLayout>
</ScrollView>